<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sys="clr-namespace:System;assembly=netstandard"
             x:Class="ExpenseApp.MainPage"
             Title="Expense Tracker">

	<VerticalStackLayout Padding="20" Spacing="15">

		<DatePicker x:Name="dpDate" Date="{x:Static sys:DateTime.Now}" />

		<Picker x:Name="pickerCategory" Title="Choose Category">
			<Picker.ItemsSource>
				<x:Array Type="{x:Type x:String}">
					<x:String>Food</x:String>
					<x:String>Transport</x:String>
					<x:String>Rent</x:String>
					<x:String>Internet</x:String>
					<x:String>Mobile</x:String>
					<x:String>Clothing</x:String>
					<x:String>Entertainment</x:String>
					<x:String>Other</x:String>
				</x:Array>
			</Picker.ItemsSource>
		</Picker>

		<Entry x:Name="entryAmount" Placeholder="Enter amount" Keyboard="Numeric" />

		<Button Text="Add Expense" Clicked="OnAddExpenseClicked"/>

		<CollectionView x:Name="cvExpenses" SelectionMode="None">
			<CollectionView.ItemTemplate>
				<DataTemplate>
					<HorizontalStackLayout Spacing="20">
						<Label Text="{Binding Date, StringFormat='{0:dd/MM/yyyy}'}" WidthRequest="100"/>
						<Label Text="{Binding Category}" WidthRequest="120"/>
						<Label Text="{Binding Amount, StringFormat='{}{0:C}'}" WidthRequest="80"/>
					</HorizontalStackLayout>
				</DataTemplate>
			</CollectionView.ItemTemplate>
		</CollectionView>

		<Label x:Name="lblTotal" Text="Total: 0.00" FontAttributes="Bold" HorizontalOptions="Center"/>

	</VerticalStackLayout>
</C>

